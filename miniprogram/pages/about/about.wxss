/* miniprogram/pages/about/about.wxss */
text{
  word-break: keep-all;
  word-wrap: break-word;
  padding: 10px;
  margin: 25px;
}

.section{
  padding-top: 15px;
  padding-bottom: 15px;
  padding-left: 10px;
  margin: 15px 0;
  background-color: #eeeeee;
}

.background_view{
  width: 100%;
  height: 100%;
  background-color: rgb(159, 190, 231);
  position: absolute;
  overflow: hidden;
}

.containerView{
  border-radius: 10px;
  background-color: rgba(255,255,255,0.9);
  width: 90%;
  height: 85%;
  top: 10%;
  left: 5%;
  position: relative;
  box-shadow: 0 0 7px 7px rgba(44, 137, 229, 0.6);
}

.wave{
  position: absolute;
  top: 60%;
	width: 200rpx;
	height: 200rpx;
	background-color: rgb(60, 108, 250);
	border-radius: 50%;
}
.wave:before,.wave:after{
	content: "";
	position: absolute;
	width: 800rpx;
	height: 800rpx;
	top: 320%;
	left: 50%;
	background-color: rgba(255, 255, 255, .4);
	border-radius: 45%;
	transform: translate(-50%, -70%) rotate(0);
	animation: rotate 6s linear infinite;
}
.wave:after {
	border-radius: 47%;
	background-color: rgba(255, 255, 255, .7);
	transform: translate(-50%, -70%) rotate(0);
	animation: rotate 10s linear -5s infinite;
}
@keyframes rotate {
	50% {
		transform: translate(-50%, -73%) rotate(180deg);
	} 100% {
		transform: translate(-50%, -70%) rotate(360deg);
	}
}
