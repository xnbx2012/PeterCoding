@media (prefers-color-scheme: dark) {
    .view_hover {
        background-color: rgb(64, 64, 64);
    }

    .divLine {
        background: rgb(37, 39, 32);
    }

    @-webkit-keyframes ripple {
        100% {
            background-color: rgba(0, 0, 0, 0);
        }
    }

    .ripple {
        background-color: rgb(0, 46, 19);
    }

    .containerView {
        background-color: rgba(46, 46, 46, 0.9);
        box-shadow: 0 0 7px 7px rgba(62,112,209,0.6);
    }

    .background_view {
        background-color: rgb(17, 23, 24);
    }

    .path {
        color:white;
        background-image: linear-gradient(30deg,#8b7839, #e6c45c);
    }
        

    .wave {
        background-color: rgb(87, 126, 255);
    }

    .wave:before, .wave:after {
        background-color: rgba(32, 32, 32, 0.4);
    }

    .wave:after {
        background-color: rgba(44, 44, 44, 0.7);
    }

    @keyframes rotate {
        50% {
            transform: translate(-50%, -73%) rotate(180deg);
        }

        100% {
            transform: translate(-50%, -70%) rotate(360deg);
        }
    }

    .wave_1 {
        background-color: rgb(87, 126, 255);
    }

    .wave_1:before, .wave_1:after {
        background-color: rgba(17, 17, 17, 0.2);
    }

    .wave_1:after {
        background-color: rgba(17, 17, 17, 0.8);
    }

    .wave_2 {
        background-color: rgb(87, 126, 255);
    }

    .wave_2:before, .wave_2:after {
        background-color: rgba(17, 17, 17, 0.3);
    }

    .wave_2:after {
        background-color: rgba(17, 17, 17, 0.8);
    }

    .modal-mask {
        background: rgb(255, 255, 255);
        color: rgb(17, 17, 17);
    }

    .modal-dialog {
        background: rgb(22, 22, 22);
    }
    text{
        color: azure;
    }
    .weui-search-bar{
        background-color: black;
    }
    .weui-search-bar__box{
        background-color: rgba(24,24,24);
    }
    .directoryNameText{
        color: rgb(210,210,210)
    }
    .fileNameText {
        color: rgb(210,210,210)
    }
}
